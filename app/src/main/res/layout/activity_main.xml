<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnIniciarSesion"
                android:layout_width="300dp"
                android:layout_height="58dp"
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_uno"
                android:enabled="true"
                android:fontFamily="sans-serif"
                android:text="Login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passLog" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="336dp"
                android:layout_height="36dp"
                android:layout_marginTop="28dp"
                android:fontFamily="sans-serif-medium"
                android:text="Iniciar sesión"
                android:textColor="#ffff"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:textAlignment="center"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.36"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <EditText
                android:id="@+id/passLog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:autofillHints=""
                android:fontFamily="sans-serif"
                android:hint="Contraseña"
                android:textColor="@color/white"
                android:textColorHint="#FFFF"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userEmailLog" />

            <EditText
                android:id="@+id/userEmailLog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:autofillHints=""
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:hint="Ingrese su email"
                android:textColorHint="#FFFF"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <TextView
                android:id="@+id/tvCrearCuenta"
                android:layout_width="154dp"
                android:layout_height="15dp"
                android:layout_marginTop="27dp"
                android:clickable="true"
                android:fontFamily="sans-serif"
                android:text="Crear nueva cuenta"
                android:textColor="@color/white"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOlvideContra" />

            <TextView
                android:id="@+id/tvOlvideContra"
                android:layout_width="204dp"
                android:layout_height="21dp"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:textColor="#FFFF"
                android:fontFamily="sans-serif"
                android:text="Olvide mi contraseña"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesion" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCrearCuenta" />

            <Button
                android:id="@+id/googleButton"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="101dp"
                android:layout_height="41dp"
                android:layout_marginTop="18dp"
                android:background="@color/white"
                android:drawableStart="@mipmap/googleicon"
                android:fontFamily="@font/aclonica"
                android:scrollbarTrackVertical="@color/white"
                android:text="Google"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:visibility="invisible"
                app:iconTint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.802"
                app:layout_constraintStart_toEndOf="@+id/progressBar2"
                app:layout_constraintTop_toBottomOf="@+id/tvCrearCuenta"
                app:shapeAppearance="@style/TextAppearance.AppCompat" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="290dp"
                android:layout_height="194dp"
                android:layout_marginTop="64dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.603"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/nnnn"
                tools:srcCompat="@drawable/nnnn" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>